<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Referring doctor -->
    <AutoCompleteTextView
        android:id="@+id/etReferredBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter referring doctor"
        android:completionThreshold="1" />

    <!-- Referred doctor name -->
    <AutoCompleteTextView
        android:id="@+id/etDoctorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter referred doctor name"
        android:completionThreshold="1" />

    <!-- Role -->
    <EditText
        android:id="@+id/etDoctorRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Role / Speciality" />

    <!-- Hospital -->
    <AutoCompleteTextView
        android:id="@+id/etHospitalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hospital Name"
        android:completionThreshold="1" />

    <!-- Address -->
    <EditText
        android:id="@+id/etDoctorAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Doctor Address" />
</LinearLayout>
